{% extends 'layouts/master.jinja2' %}
{% from 'search_results_macros.jinja2' import paginate with context %}
{% block content %}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb bg-white">
    <li class="breadcrumb-item"><a href="{{ request.route_url('homepage') }}">首頁</a></li>
    <li class="breadcrumb-item" aria-current="page">最新消息搜尋結果</li>
  </ol>
</nav>

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card mb-3">
        <div class="table-responsive">
          <table class="table table-hover text-center mb-0">
            <thead>
              <tr>
                <th scope="col" class="d-none d-md-table-cell">編號</th>
                <th scope="col" class="d-none d-md-table-cell">時間</th>
                <th scope="col" class="d-none d-sm-table-cell">發佈單位</th>
                <th scope="col" class="d-none d-sm-table-cell">類別</th>
                <th scope="col" class="d-none d-sm-table-cell">標題</th>
              </tr>
            </thead>
            <tbody>
              {% for each_news in results %}
                <tr>
                  <th class="d-none d-md-table-cell" scope="row">{{ (page_number - 1) * quantity_per_page + loop.index }}</th>
                  <td class="d-none d-md-table-cell">{{ each_news.display_datetime.strftime('%Y-%m-%d') }}</td>
                  <td class="d-none d-sm-table-cell">{{ each_news.group.name }}</td>
                  <td class="d-none d-sm-table-cell">{{ each_news.category.name }}</td>
                  <td class="p-0"><a class="d-block w-100 h-100" style="padding: .75rem;" href="{{ request.route_url('news_get', news_id=each_news.id) }}"><li class="d-flex justify-content-between align-items-center"><span>{{ each_news.title }}</span><span class="badge badge-pill badge-primary d-md-none">{{ each_news.display_datetime.strftime('%Y-%m-%d') }}</span></li></a></td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    {{ paginate("搜尋結果分頁", "search_results", page_quantity_of_total_results, page_number, quantity_per_page) }}
    </div>
  </div>
</div>
{% endblock content %}
